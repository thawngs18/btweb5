@{
    ViewData["Title"] = "Đăng nhập";
}

<h2 class="text-center">@ViewData["Title"]</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<div class="d-flex justify-content-center">
    <form method="post" asp-action="Login" class="w-50">
        <div class="form-group">
            <label for="Username">Tên đăng nhập</label>
            <input name="username" id="Username" class="form-control" placeholder="Nhập tên đăng nhập" required autofocus />
        </div>

        <div class="form-group">
            <label for="Password">Mật khẩu</label>
            <input name="password" id="Password" type="password" class="form-control" placeholder="Nhập mật khẩu" required />
        </div>

        <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>

        <div class="text-center mt-3">
            <a href="#">Quên mật khẩu?</a>
        </div>
    </form>
</div>